<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.youngchemist.ui.screen.auth.register.RegisterFragmentViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.screen.auth.register.RegisterFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:layout_width="650dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="86dp"
                android:src="@drawable/flask"
                app:layout_constraintEnd_toEndOf="parent">

            </ImageView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_comments"
                android:layout_width="430dp"
                android:layout_height="400dp"
                android:layout_marginStart="184dp"
                android:layout_marginTop="80dp"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login"
                style="@style/DefaultButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_extra_huge"
                android:background="@drawable/shape_rounded_button"
                android:backgroundTint="#0e8bce"
                android:drawableStart="@drawable/ic_baseline_arrow_left"
                android:text="@string/enter"
                android:onClick="@{view -> viewModel.navigateToLoginScreen()}"
                app:layout_constraintEnd_toEndOf="@+id/cv_comments"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_comments">

            </androidx.appcompat.widget.AppCompatButton>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>