<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_custom_snackbar"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/timeLeft_circularProgressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        app:cpb_background_progressbar_color="#b6bbd8"
        app:cpb_background_progressbar_width="3dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="#F47D74"
        app:cpb_progressbar_width="3dp"
        app:cpb_round_border="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.mikhaellopez.circularprogressbar.CircularProgressBar>

    <TextView
        android:id="@+id/tv_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/timeLeft_circularProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/timeLeft_circularProgressBar"
        app:layout_constraintStart_toStartOf="@+id/timeLeft_circularProgressBar"
        app:layout_constraintTop_toTopOf="@+id/timeLeft_circularProgressBar"
        tools:text="3"/>

    <TextView
        android:id="@+id/tv_model_title"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timeLeft_circularProgressBar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Удаление модели 3"/>

    <TextView
        android:id="@+id/tv_undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отменить"
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>